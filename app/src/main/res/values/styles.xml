<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TextAppearance.AppCompat.Widget.ActionBar.Title" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">20dp</item>
    </style>

    <style name="header_font_size">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">23sp</item>
    </style>

    <style name="header_font_size_title" parent="header_font_size">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="header_font_size_title3" parent="header_font_size">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/pdlg_color_gray</item>
    </style>

    <style name="header_font_size_title2" parent="header_font_size">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="mess_time_martop">
        <item name="android:layout_marginTop">7dp</item>
        <item name="android:textSize">13.5sp</item>
        <item name="android:textColor">#666666</item>
    </style>

    <style name="title_bar_status">
        <item name="android:textColor">@color/pdlg_color_white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="bar_status">
        <item name="android:textColor">@color/pdlg_color_white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
