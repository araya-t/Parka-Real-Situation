<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawerLayout_register"
    tools:context=".activity.RegisterActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/first_layout_margin"
                    android:background="@drawable/bg_radius_white"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/hight_header"
                        android:background="@drawable/header_radius"
                        android:layout_marginTop="@dimen/second_layout_margin">

                        <TextView
                            style="@style/header_font_size"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="Register" />

                    </FrameLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_margin="@dimen/second_layout_margin"
                        android:padding="@dimen/padding_seclayout_inside"
                        android:paddingBottom="@dimen/padding_buttom_inside">

                        <TextView
                            style="@style/header_font_size_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/tvRegister_name" />

                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/etInputName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:errorEnabled="true">

                            <android.support.design.widget.TextInputEditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="text"/>

                        </android.support.design.widget.TextInputLayout>

                        <TextView
                            style="@style/header_font_size_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/tvRegister_surname" />

                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/etInputSurname"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:errorEnabled="true">

                            <android.support.design.widget.TextInputEditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="text"/>

                        </android.support.design.widget.TextInputLayout>

                        <TextView
                            style="@style/header_font_size_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/tvRegister_telNumber" />

                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/etInputTelNumber"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:errorEnabled="true">

                            <android.support.design.widget.TextInputEditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="phone"/>

                        </android.support.design.widget.TextInputLayout>

                        <TextView
                            style="@style/header_font_size_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/tvRegister_email" />

                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/etInputEmail"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:errorEnabled="true">

                            <android.support.design.widget.TextInputEditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="textEmailAddress"/>

                        </android.support.design.widget.TextInputLayout>

                        <TextView
                            style="@style/header_font_size_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="30dp"
                            android:text="@string/tvRegister_userName"/>

                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/etInputUserName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:errorEnabled="true">

                            <android.support.design.widget.TextInputEditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="text"/>

                        </android.support.design.widget.TextInputLayout>

                        <TextView
                            style="@style/header_font_size_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/tvRegister_password" />

                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/etInputPassword"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:errorEnabled="true">

                            <android.support.design.widget.TextInputEditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="textPassword" />

                        </android.support.design.widget.TextInputLayout>

                        <TextView
                            style="@style/header_font_size_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/text_re_password"
                            />

                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/etInputRePassword"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:errorEnabled="true">

                            <android.support.design.widget.TextInputEditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="textPassword" />

                        </android.support.design.widget.TextInputLayout>


                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <Button
                android:id="@+id/btnRegisSubmit"
                style="@style/header_font_size_title"
                android:background="@drawable/bg_radius_btn"
                android:layout_width="@dimen/editText_width"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/margin_buttom_field"
                android:text="@string/btn_submit_register"
                android:onClick="RegisterSubmit"
                tools:ignore="OnClick" />

        </LinearLayout>


    </ScrollView>

</android.support.v4.widget.DrawerLayout>